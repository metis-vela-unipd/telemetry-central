#!/bin/bash

# startlog - A script to start the logging processes

# get current time
NOW=$(date +"%Y-%m-%d_%H:%M:%S")

# start gpxlogger
mkdir -p ~/telemetry-logs/gpx
filename=~/telemetry-logs/gpx/$NOW.gpx
gpxlogger -d -f $filename
echo "Started gpxlogger process with output $filename, use 'stoplog' to stop it"
